<h1>Sign Up</h1>

<form class="well" {{action 'register' on="submit"}}>
	<h2>Register</h2>
	<div class="form-group">
		{{input value=username type="text" placeholder="Username" }}
	</div>
	<div class="form-group">
		{{input value=password type="password" placeholder="Password" }}
	</div>
	<div class="form-group">
		{{input value=password_confirm type="password" placeholder="Confirm Password" }}
	</div>
	<div class="form-group">
		{{input value=email type="text" placeholder="Email"}}
	</div>

		{{input value=csrf type="hidden" name="authenticity_token"}}

	{{input class="btn" type="submit" value="Register"}}
</form>